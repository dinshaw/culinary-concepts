<h1>Menu Sections for: <%= @concept.title %></h1>
<p><%= link_to 'New menu section', new_admin_concept_menu_section_path(@concept) %></p>
<table>
<thead> 
 <tr>
    <th>Title</th>
	<th colspan="5">Actions</th>
  </tr>
</thead>
<% for menu_section in @menu_sections %>
  <tr>
    <td><%=h menu_section.title %></td>
	<td><%= link_to "Menu Items", admin_concept_menu_section_menu_items_path(@concept,menu_section) %></td>
	<td><%= link_to 'Up', up_admin_concept_menu_section_path(@concept,menu_section), :method => :put %> | <%= link_to 'Down', down_admin_concept_menu_section_path(@concept,menu_section), :method => :put %></td>
    <td><%= link_to 'Edit', edit_admin_concept_menu_section_path(@concept,menu_section) %></td>
    <td><%= link_to 'Delete', admin_concept_menu_section_path(@concept,menu_section), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />


