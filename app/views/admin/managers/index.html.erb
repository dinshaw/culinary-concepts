<h1>Management Team</h1>
<p><%= link_to 'New manager', new_admin_manager_path %></p>
<table>
<thead>	
  <tr>
    <th>Name</th>
    <th>Title</th>
    <th>Body</th>
    <!-- <th>Location</th> -->
	<th colspan="4"></th>
  </tr>
</thead>
<% for manager in @managers %>
  <tr class="<%= cycle "odd", "even" %>">
    <td><%=h manager.name %></td>
    <td><%=h manager.title %></td>

    <td><%= manager.body %></td>
    <!-- <td><%=h manager.location.title if !manager.location.nil? %></td> -->

	<td><%= link_to 'Up', up_admin_manager_path(manager), :method => :put %> | <%= link_to 'Down', down_admin_manager_path(manager), :method => :put %></td>
    <td><%= link_to 'View', [:admin,manager] %></td>
    <td><%= link_to 'Edit', edit_admin_manager_path(manager) %></td>
    <td><%= link_to 'Delete', [:admin,manager], :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />


