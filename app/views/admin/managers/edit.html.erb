<h1>Editing manager</h1>

<%= error_messages_for :manager %>

<% form_for([:admin,@manager], :html => {:multipart => true}) do |f| %>
  <p>
    <b>Name</b><br />
    <%= f.text_field :name %>
  </p>

  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Body</b><br />
    <%= f.text_area :body %>
  </p>

  <!-- <p>
    <b>Location</b><br />
    <%= f.collection_select :location_id, Location.find(:all), :id, :title %>
  </p> -->

  <p>
    <b>Image</b><br />
    <%= f.file_field :uploaded_data_img_manager %>
  </p>

<% if !@manager.photo.nil? %>
	<%= image_tag @manager.photo.public_filename(:thumb), :class => :thumb  %>
<p>
	<%= label :manager, :remove_img_manager, "Remove Manager Image", :class => "left" %>
	<%= f.check_box :remove_img_manager %>
</p>
<% end %>


  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'View', @manager %> |
<%= link_to 'Back', admin_managers_path %>
