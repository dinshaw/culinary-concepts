<h1><%=h @article.title %></h1>
<p><%=h @article.date_published %></p>
<h2>Publication Image:</h2>
<%= image_tag @article.attachments.img_publication.public_filename(:thumb) if !@article.attachments.img_publication.nil? %>


<%= image_tag @article.attachments.img_article.public_filename(:sidebar), :class => :left if !@article.attachments.img_article.nil? %>
<%= @article.body %>

<p><%= link_to("Download PDF", @article.attachments.content_file.public_filename, :target => "_blank") if !@article.attachments.content_file.nil? %></p>
<br class="clear" /> 



<p><%= link_to 'Edit', edit_admin_article_path(@article) %> | <%= link_to 'Back', admin_articles_path %></p>
