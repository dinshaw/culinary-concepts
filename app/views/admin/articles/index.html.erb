<h1>Press</h1>
<p><%= link_to 'New press', new_admin_article_path %></p>

<table>
<thead>
	<tr>
	<th>Publication Image</th>
	<th>Article Image</th>
    <th>Title</th>
    <th>Body</th>
    <th>State</th>
    <th>Date published</th>
    <th>Publication name</th>
	<th colspan="4">Actions</th>
  </tr>
</thead>
<% for article in @articles %>
  <tr class="<%= cycle "odd", "even" %>">
	<td><%= image_tag article.attachments.img_publication.public_filename(:thumb) if !article.attachments.img_publication.nil? %></td>
	<td><%= image_tag article.attachments.img_article.public_filename(:thumb) if !article.attachments.img_article.nil? %></td>	
	<td><%=h article.title %></td>
    <td><%= truncate(article.body, 50) %></td>
    <td><%=h article.state %></td>
    <td><%=h article.date_published %></td>
    <td><%=h article.publication_name %></td>
	<td nowrap="nowrap"><%= link_to 'Up', up_admin_article_path(article), :method => :put %> | <%= link_to 'Down', down_admin_article_path(article), :method => :put %></td>
    <td><%= link_to 'Show', [:admin,article] %></td>
    <td><%= link_to 'Edit', edit_admin_article_path(article) %></td>
    <td><%= link_to 'Destroy', [:admin,article], :confirm => confirm_text, :method => :delete %></td>
  </tr>
<% end %>
</table>

<br />


