<h1>Editing page</h1>

<%= error_messages_for :page %>

<% form_for([:admin,@page]) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Description</b><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <b>Meta Keywords</b><br />
    <%= f.text_area :meta_keywords, :class => :mceNoEditor %>
  </p>

  <p>
    <b>Meta Description</b><br />
    <%= f.text_area :meta_description, :class => :mceNoEditor %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'View', [:admin,@page] %> |
<%= link_to 'Back', admin_pages_path %>
