<h1>New menu_item</h1>

<%= error_messages_for :menu_item %>

<% form_for(@menu_item) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Position</b><br />
    <%= f.text_field :position %>
  </p>

  <p>
    <b>Menu section</b><br />
    <%= f.text_field :menu_section_id %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', menu_items_path %>
