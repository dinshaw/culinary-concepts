<h1>Editing location</h1>

<%= error_messages_for :location %>

<% form_for([:admin,@location]) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Parent</b><br />
    <%= f.collection_select :parent_id, Location.find(:all), :id, :title, :prompt => "Choose one..." %>
  </p>

  <p>
    <b>Url</b><br />
    <%= f.text_field :url %>
  </p>

  <p>
    <b>Phone</b><br />
    <%= f.text_field :phone %>
  </p>

  <p>
    <%= f.submit "Update" %>
  </p>
<% end %>

<%= link_to 'View', @location %> |
<%= link_to 'Back', admin_locations_path %>
