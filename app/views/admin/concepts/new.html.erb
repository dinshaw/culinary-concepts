<h1>New concept</h1>

<%= error_messages_for :concept %>

<% form_for([:admin,@concept], :html => {:multipart => true}) do |f| %>
  <p>
    <b>Title</b><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <b>Quote</b><br />
    <%= f.text_area :quote %>
  </p>

  <p>
    <b>Body</b><br />
    <%= f.text_area :body %>
  </p>

  <p>
    <b>Sidebar Image</b><br />
    <%= f.file_field :uploaded_data_sidebar %>
  </p>

  <p>
    <b>Main Image</b><br />
    <%= f.file_field :uploaded_data_main %>
  </p>

  <p>
    <b>Concept image 1</b><br />
    <%= f.file_field :uploaded_data_concept1 %>
  </p>

  <p>
    <b>Concept image 2</b><br />
    <%= f.file_field :uploaded_data_concept2 %>
  </p>

  <p>
    <b>Menu image 1</b><br />
    <%= f.file_field :uploaded_data_menu1 %>
  </p>

  <p>
    <b>Menu image 2</b><br />
    <%= f.file_field :uploaded_data_menu2 %>
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', concepts_path %>
