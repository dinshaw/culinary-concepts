<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE html PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN"
	"http://www.w3.org/TR/xhtml1/DTD/xhtml1-strict.dtd">

<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en" lang="en">
<head>
	<meta http-equiv="content-type" content="text/html;charset=UTF-8" />
	<title>Culinary Concepts</title>
	<%= stylesheet_link_tag 'layout' %>
	<%= stylesheet_link_tag 'main' %>
	<%= stylesheet_link_tag 'scaffold' %>
	<%= javascript_include_tag "application", "rollover" %>
</head>
<body>
	<div id="canvas">
		<div id="nav_main">
			<ul>
				<li><%= nav_image_for("main","home") %></li>
				<li><%= nav_image_for("main","about_us") %></li>
				<li><%= nav_image_for("main","jean_georges") %></li>
				<li id="concepts"><%= nav_image_for("main","concepts")  %>
					<ul id="nav_concept">
						<li><%= nav_image_for("concepts","jean_georges") %></li>
						<li><%= nav_image_for("concepts","resort") %></li>
						<li><%= nav_image_for("concepts","spicemarket") %></li>
						<li><%= nav_image_for("concepts","bistro") %></li>
						<li><%= nav_image_for("concepts","kitchen") %></li>
						<li><%= nav_image_for("concepts","modern_american") %></li>
						<li><%= nav_image_for("concepts","steakhouse") %></li>
					</ul>
				</li>
				<li><%= nav_image_for("main","press") %></li>
				<li><%= nav_image_for("main","locations") %></li>
				<li><%= nav_image_for("main","contact_us")  %></li>
				<li><%= nav_image_for("main","careers") %></li>
			</ul>
		</div><!-- nav_main -->
				
		<div id="sidebar">
			<object type="application/x-shockwave-flash" data="/swf/slideShow3.swf" width="236" height="666">
				<param name="allowScriptAccess" value="sameDomain" />
				<param name="allowFullScreen" value="false" />
				<param name="movie" value="/swf/slideShow3.swf" />
				<param name="flashvars" value="myXML=/xml/<%= @controller.action_name %>.xml" />
				<param name="quality" value="high" />
				<param name="bgcolor" value="#6f1100" />
				<img src="noflash.gif" width="200" height="100" alt="" />
			</object>
		</div><!-- sidebar -->
		
		<% if url_for == root_path %>
			<div id="home">
				<h1><span></span>Culinary Concepts :: Jean-Georges  - home</h1>
				
				<!-- <div id="tag">Local in content. Global in reach.</div> -->
				
				<div id="nav_home_concepts">
				<ul>
					<li><%= ["Jean Georges", "Resort", "Spice Market", "Bistro", "Kitchen", "Modern American", "Steakhouse"].collect {|l| link_to l,l}.join("</li>
					<li>") %></li>
				</ul>
				</div>
			</div>
		<% else %>
			<div id="masthead">
				<h1><span></span>Culinary Concepts :: Jean-Georges</h1>
			</div> <!-- masthead -->

			<div id="main_content" class="<%= @controller.action_name %>">
				<div id="inner_content">
					<p id="flash"><%= flash[:notice] -%><%= flash[:message] -%></p>
					<%= yield  %>
				</div>
			</div> <!-- main_content -->
		<% end %>


		<div id="footer">
			<p id="site_info"><span id="footer_links"><%= ["Jean Georges", "Resort", "Spice Market", "Bistro", "Kitchen", "Modern American", "Steakhouse"].collect {|l| link_to l,root_path}.join(" | ") %></span>&copy; <%= Date.today.year %> Culinary Concepts by Jean-Georges</p>
		</div> <!-- footer -->

	</div>
</body>
</html>
