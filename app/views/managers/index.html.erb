<% @page_title = "Management Team" %> 

<h1>Management Team</h1>

<h2><%= link_to "About Us", about_us_path %> <span id="manager_link"><%= link_to "Management Team", managers_path %></span></h2>

<div id="outer_scroll">

	<div id="scroll_box_sm" class="noheight">
		<% @managers.each do |m| %>
			<div class="manager">
				<%= image_tag m.photo.public_filename(:thumb), :class => :right if !m.photo.nil? %>
				<h2><%= m.name %></h2>
				<%= m.body %>
			</div>
			<br class="clear" />
		<% end %>
	</div>

	<span id="scroll_up"><%= image_tag "up_arrow.gif" %></span><span id="scroll_down"><%= image_tag "down_arrow.gif" %></span> 

</div>

<script type="text/javascript"> 
var div_scroll1 = new TextScroll('div_scroll1', 'scroll_box_sm', 'scroll_up', 'scroll_down'); 
</script>