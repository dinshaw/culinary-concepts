<h1>Locations</h1>



<% for location in @locations %>
<ul>
	<li><%= !location.url.blank? ? link_to(location.title, location.url, :class => "popup full") : location.title %>
		<% if location.children.length > 0 %>
		<ul>
			<% location.children.each do |c| %>
			<li><%= !c.url.blank? ? link_to(c.title, c.url, :class => "popup full") : c.title %></li>
			<% end %>
		</ul>	
		<% end %>
	</li>
</ul>

  
