/* =General
-----------------------------------------------------------------------------*/



/*Put it back on option tag*/
option{margin:3px}

/* Class for clearing floats */
.clear {clear:both;}


/* Remove border around linked images */
img {border: 0;}


/* =Typography
default font_size / line_height
-----------------------------------------------------------------------------*/
body {
	font:100%/1.5em verdana, arial, helvetica, sans-serif;
	background-color: <%= @bg_red %>;
	color:<%= @off_white %>;
}

p {
	font-size:0.7em;
}


/* =Headings
-----------------------------------------------------------------------------*/
h1{
	line-height:1.3em;
	font-size:1em;
}


/* =Links
-----------------------------------------------------------------------------*/

a:link{color:<%= @off_white %>}
/* a:visited{}
a:hover{}
a:active{} */

#footer a{
	text-transform:uppercase;
	text-decoration:none;
}


/* =Lists
-----------------------------------------------------------------------------*/
ul{
	list-style:none;
}


/* =Masthead
-----------------------------------------------------------------------------*/

#masthead{
	background-color:<%= @masthead_red %>;
}

#home{
	position:relative;
	background:<%= @masthead_red %> url(/images/map.jpg) 20px 40px no-repeat;
}

/* Gilder / Levin image replacement method for logo */
#masthead h1, #home h1{
	position:relative;
	width:127px;
	height:127px;

	/* position h1 */
	top:50%;
	margin-top:-80px;
}

#home h1{
	left:30px;
}
#masthead h1{
	left:550px;
}

#tag{
	color:<%= @off_white %>;
	text-transform:uppercase;
	position:relative;
	top:50%;
	margin-top:-45px;
	left:180px;
}

#home ul{
	position:relative;
	top:70%;
	margin-top:-45px;
	left:40px;
}

#masthead h1 span, #home h1 span{
	background:url(/images/culinary-concepts.gif) top left no-repeat;
	position:absolute;
	height:100%;
	width:100%;
}



/* =Main Nav
-----------------------------------------------------------------------------*/
#nav_main ul{

}

#nav_main ul li {
	float:left;
	margin:0;
	padding:0;
	height:31px;
}

#nav_main ul a {
	padding:0;margin:0;
	display:block;
