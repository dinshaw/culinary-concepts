/* =Home Concept Nav
-----------------------------------------------------------------------------*/

#nav_home_concepts li {
	float:left;
	padding:5px 50px 5px 20px;
}

#nav_home_concepts a {
	display:block;
	color:<%= @salmon %>;
	text-transform:uppercase;
	text-decoration:none;
}

#nav_home_concepts a:hover, #nav_home_concepts a.curr{
	color:#fff;
}




/* =Main Content
-----------------------------------------------------------------------------*/
#main_content{
	background-color:<%= @content_red %>;
}

#main_content h1{
	margin-bottom:20px;
}

/* =Secondary Content
-----------------------------------------------------------------------------*/



/* =Footer
-----------------------------------------------------------------------------*/
#footer p span{
	float:right;
}


/* =Forms
-----------------------------------------------------------------------------*/

input.text{
	border:1px solid #565656;
	padding:1px 3px;
}

input.btn{
	background-color:#dc8810;
	color:#fff;
	border:1px solid #565656;
	text-transform:uppercase;
	padding:1px 5px;
	cursor:pointer;
}

textarea{
	height:100px;
}


/* =Tables
-----------------------------------------------------------------------------*/

table {border-spacing: 0;border-collapse: collapse;}

td {text-align: left;font-weight: normal;}



