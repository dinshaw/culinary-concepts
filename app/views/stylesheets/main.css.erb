/* =General
-----------------------------------------------------------------------------*/



/*Put it back on option tag*/
option{margin:3px}

/* Class for clearing floats */
.clear {clear:both;}


/* Remove border around linked images */
img {border: 0;}

img.right{
	float:right;
	margin-left:10px;
}

img.left{
	float:left;
	margin-right:10px;
}
/* =Typography
default font_size / line_height
-----------------------------------------------------------------------------*/
body {
	font:100%/1.125em arial, verdana, helvetica, sans-serif;
	background-color: <%= @bg_red %>;
	color:<%= @off_white %>;
}

p, h2, li {
	font-size:0.7em;
}

#canvas{
	position:relative;
}
/* =Headings
-----------------------------------------------------------------------------*/
h1{
	line-height:1.3em;
	font-size:1em;
}


/* =Links
-----------------------------------------------------------------------------*/

a:link{color:<%= @off_white %>}
a:visited{color:<%= @off_white %>}
a:hover{color:<%= @off_white %>}
a:active{}

#footer a{
	text-transform:uppercase;
	text-decoration:none;
}


/* =Lists
-----------------------------------------------------------------------------*/
ul{
	list-style:none;
}

#united_states{
	float:left;
}
#international{
	float:right;
	margin-right:100px;
}
ul.locations_list li{
	font-size:1em;
}

ul.locations_list li.parent{
	font-size:20px;
	color:<%= @brown %>;
}
ul.locations_list li li{
	font-size:16px;	
}

ul.locations_list li li li{
	font-size:12px;	
}
ul.locations_list li a{
	text-decoration:none;
	color:<%= @brown %>;
}

ul.locations_list li a:hover{
	text-decoration:underline;
}
ul.locations_list li.child{
	margin-top:10px;
	color:<%= @off_white %>;
}


/* =Masthead
-----------------------------------------------------------------------------*/

#masthead{
	background-color:<%= @masthead_red %>;

}

#home{
	position:relative;
	background:<%= @masthead_red %> url(/images/map.jpg) 20px 40px no-repeat;
}

#concept{
	background-color:<%= @masthead_red %>;
	position:relative;
}

/* Gilder / Levin image replacement method for logo */
#masthead h1, #home h1, #concept h1{
	position:relative;
	width:127px;
	height:127px;

	/* position h1 */
	top:50%;
	margin-top:-80px;
}



#home h1{
	left:30px;
}
#masthead h1{
	left:550px;
}

#concept h1{
	top:20%;
	left:550px;
}

#concept_content{
	float:right;
	width:465px;
	height:445px;
	background-color:<%= @pink %>;
}


#concept_image_top{
	position:absolute;
	top:0;
	right:0;
	height:221px;
	width:465px;
}

#inner_concept{
	position:absolute;
	bottom:0;
	height:445px;
	width:704px;
}

#outer_scroll{
	position:relative;
}

#outer_scroll span{
	border:0;
}

#scroll_up { 
	cursor: pointer; 
	position:absolute;
	right:0;
	top:70px;
	margin:0;
} 
#scroll_down { 
	cursor: pointer; 
	position:absolute;
	right:0;
	bottom:20px;
	margin:0;	
} 

#scroll_box {	
	margin-top:20px;
	height: 350px; 
	width: 580px;
	overflow: auto; 
	
}

#concept_content #scroll_box{
		width: 450px; 
}


img#signature{
	margin:25px 0 0 180px;
}
#next{
	text-align:right;
}
#next a{
	text-decoration:none;
}
#concept a,#concept p,#concept li, #concept h2{color:<%= @bg_red %>;}
#concept p,#concept ul, #concept h2{
	margin:20px 20px 0 20px;
}

#concept h2 a{
	margin-right:20px;
}

#menu_sections li{
	float:left;
	margin-right:20px;
}

#menu_items{
	float:left;
}
#menu_items li{
	
	font-weight:bold;
}

#concept_content h2, #menu_sections li,#menu_sections li a{
	font-size:9px;
}

#tag{
	color:<%= @off_white %>;
	text-transform:uppercase;
	position:relative;
	top:50%;
	margin-top:-45px;
	left:180px;
}

#home #nav_home_concepts{
	float:left;
	position:relative;
	top:70%;
	margin-top:-45px;
	left:30px;
}

#masthead h1 span, #home h1 span, #concept h1 span{
	background:url(/images/culinary-concepts.gif) top left no-repeat;
	position:absolute;
	height:100%;
	width:100%;
}

#home #tag{
	position:relative;
	width:380px;
	height:38px;
}
#home #tag span{
	background:url(/images/tag.gif) top left no-repeat;
	position:absolute;
	height:100%;
	width:100%;
}

#manager_link {
	margin-left:20px;
}


.manager{
	margin:20px 0;
	padding-bottom:10px;
	border:1px solid <%= @off_white %>;
	border-width:0 0 1px 0;
}

.manager h3{
	font-size:9px;
}
/* =Main Nav
-----------------------------------------------------------------------------*/
#nav_main ul{
}

#nav_main ul li {
	float:left;
	margin:0;
	padding:0;
	height:31px;
	position:relative;
}

#nav_main ul li a, 
#nav_main ul li li a {
	padding:0;margin:0;
	display:block;
}

#nav_main ul ul{
	position:absolute;
	top:31px;
	z-index:5000;
	display:none;
}

#nav_main ul li:hover ul, #nav_main ul li.over ul {
	display:block;
}

/* =Concept Sub Nav
-----------------------------------------------------------------------------*/

#nav_concept{
	width:150px;
	left:12px;
	background-color:<%= @bg_red %>;
}

#nav_concept li{
	height:23px;
	float:none;
	margin:0;
	padding:0;
}



/* =Home Concept Nav
-----------------------------------------------------------------------------*/
#nav_home_concepts li {
	font-size:1em;
	float:left;
	padding:5px 50px 5px 0;
}

#nav_home_concepts a {
	display:block;
	color:<%= @salmon %>;
	text-transform:uppercase;
	text-decoration:none;
}




/* =Main Content
-----------------------------------------------------------------------------*/
#main_content{
	background-color:<%= @content_red %>;
}

#main_content h1, #main_content h2{
	margin-bottom:20px;
}

/* =Secondary Content
-----------------------------------------------------------------------------*/
.contact_us{
	background:url(/images/pages/contact_us.jpg) top right no-repeat;
}

.careers{
	background:url(/images/pages/careers.jpg) top right no-repeat;
}
.careers #inner_content{
	width:400px;
}


.article{
	padding-bottom:10px;
	border-bottom:1px solid <%= @off_white %>;
}

.article p{
	margin-left:200px;
}



/* =Footer
-----------------------------------------------------------------------------*/
#footer{
	margin:0;
	width:940px;
}
#footer, #footer a {
	color:<%= @salmon %>;
}
#footer a:hover{
	color:<%= @off_white %>;
}
#footer p span{
	float:right;
}


