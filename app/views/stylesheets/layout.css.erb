html, body {
	height: 100%;
	text-align:center;
}

#canvas {
	width:940px;
	margin:auto;
	text-align:left;
	position: relative;
	height: 750px;
}

#nav_main{
	padding:25px 0 3px 0;
}

/* Add border to avoid margin collapse  */
#home{
	height:664px;
	border:1px solid <%= @masthead_red %>;
	border-width:1px 0;
}
#masthead{
	height:212px;
	border:1px solid <%= @masthead_red %>;
	border-width:1px 0;
}

#main_content, #masthead, #home{
	width:704px;
	margin-left:236px;
}

/* Add border to avoid margin collapse  */
#main_content{
	height:450px;
	border:1px solid <%= @content_red %>;
	border-width:1px 0;
}

#inner_content{
	margin:100px 60px 60px 60px;
}
#sidebar{
	float:left;
	height:666px;
	width:236px;
}

#footer {
	clear:both;
}