/* Remove padding and margin */
* {margin: 0;padding: 0;}


body {
	text-align:center;
}

#canvas {
	width:940px;
	margin:auto;
	text-align:left;
	height: 750px;
}

#nav_main{
	margin-top:25px;
	height:31px;
}

/* Add border to avoid margin collapse  */
#home{
	height:664px;
}

#masthead{
	height:212px;
}

#masthead, #home{
	border:1px solid <%= @masthead_red %>;
	border-width:1px 0;
}

#main_content, #masthead, #home{
	width:704px;
	float:left;
}

/* Add border to avoid margin collapse  */
#main_content{
	height:450px;
	border:1px solid <%= @content_red %>;
	border-width:1px 0;
}

#inner_content{
	margin:100px 60px 60px 60px;
}
#sidebar{
	float:left;
	height:666px;
	width:236px;
}

#main_content, #sidebar{
	margin-bottom:10px;
}
#footer {
	clear:both;
}