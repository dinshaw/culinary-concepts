/* Remove padding and margin */
* {margin: 0;padding: 0;}

body {
	text-align:center;
}

#canvas {
	width:940px;
	margin:auto;
	text-align:left;
	height: 750px;
	border:1px solid <%= @bg_red %>;
	border-width:1px 0;
}

#nav_main{
	margin-top:21px;
	height:31px;
}

#home, #concept{
	height:666px;
	z-index:-1;
}

html > body #home,html > body #concept{
	z-index:0;
}
#masthead{
	height:214px;
}

#masthead{
	border:1px solid <%= @masthead_red %>;
	border-width:1px 0;
}

#main_content, #masthead, #home, #concept{
	width:704px;
	float:left;
}

/* Add border to avoid margin collapse  */

#main_content{
	height:452px;
	margin-bottom:0;
}

#inner_content{
	margin:40px 40px 0 40px;
}

#sidebar{
	float:left;
	height:666px;
	width:236px;
}

#footer {
		clear:both;
}