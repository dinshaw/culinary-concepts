body{
	background:#000 url(/images/culinary-concepts.gif) 20px 20px no-repeat;
}
#canvas{
	width:1000px;
		margin-top:150px;
}


#nav_admin{
	width:147px;
	float:left;	
}
#nav_admin a{
	color:white;
	text-decoration:underline;

}

#admin_content{
	margin:147px 0 0 147px;
	background-color:#fff;
	color:#000;
	border:1px solid green;
	padding:20px;
}

#admin_content p, #admin_content td, #admin_content th{
		font-size:0.775em;
}

#admin_content img.thumb{
	border:1px solid #000;
}
#admin_content a{ color:#000;}
#admin_content a:visited{ color:#999;}
#admin_content a:hover{ color:<%= @masthead_red %>;}

#admin_content h1{
	font-size:2em;
	font-weight:normal;
	margin:0;
	color:<%= @bg_red %>; 
	border:1px solid <%= @bg_red %>;
	border-width:0 0 1px 0;
	background-color:#fff;
}

#admin_content h1 span{
	font-size:0.5em;
	font-weight:normal;
}
table {border-spacing: 0;border-collapse: collapse; margin:10px 0;}


td {text-align: left;font-weight: normal; color:#000;}

td#left_td {width:16em;}

td,th{
	padding:0.1em 1em;
	border:1px solid #ccc;
	}

td a{
	font-size:0.8em;
}
thead{color:#fff;background-color:#ccc;}

tr.odd td{background-color:#e4efef;}

tr:hover td{background-color:<%= @off_white %>;}
thead tr:hover{background-color:#ccc;}

textarea.mceNoEditor{
	height:50px;
}